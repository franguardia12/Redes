{
  "switch_with_firewall": 1,
  "firewall_rules": [
    {
      "rule_id": 1,
      "description": "Descartar todos los mensajes cuyo puerto destino sea 80",
      "match": {
        "dst_port": 80
      },
      "action": "drop"
    },
    {
      "rule_id": 2,
      "description": "Descartar mensajes del host 1 con puerto destino 5001 usando UDP",
      "match": {
        "src_ip": "10.0.0.1",
        "protocol": "UDP",
        "dst_port": 5001
      },
      "action": "drop"
    },
    {
      "rule_id": 3,
      "description": "Bloquear comunicaci√≥n entre host 2 y host 3",
      "match": [
        {
          "src_ip": "10.0.0.2",
          "dst_ip": "10.0.0.3"
        },
        {
          "src_ip": "10.0.0.3",
          "dst_ip": "10.0.0.2"
        }
      ],
      "action": "drop"
    }
  ]
}